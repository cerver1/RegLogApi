<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regback"
    tools:context="com.example.ui.auth.Signup">


    <ProgressBar
        android:id="@+id/signupprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/signupname"
        app:layout_constraintEnd_toEndOf="@+id/signupname"
        app:layout_constraintStart_toStartOf="@+id/signupname" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="georgia"
        android:text="You have an accoun?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp">

    </TextView>

    <TextView
        android:id="@+id/logintxtbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="georgia"
        android:text="Login"
        android:textColor="#DC1D1D"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="16dp">

    </TextView>

    <Button

        android:id="@+id/signupbtn"
        android:layout_width="133dp"
        android:layout_height="51dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/loginbutton"
        android:text="Signup"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/signuppassword"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/signuppassword"
        app:layout_constraintTop_toBottomOf="@+id/signuppassword">

    </Button>

    <EditText
        android:id="@+id/signupname"
        android:inputType="textAutoComplete"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittextbackgroud"
        android:hint="Name:"
        app:layout_constraintBottom_toTopOf="@+id/signupemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

    </EditText>

    <EditText
        android:id="@+id/signupemail"
        android:inputType="textEmailAddress"
        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittextbackgroud"
        android:hint="Email:"
        app:layout_constraintBottom_toTopOf="@+id/signuppassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupname">

    </EditText>

    <EditText
        android:id="@+id/signuppassword"

        android:layout_width="280dp"
        android:layout_height="54dp"
        android:inputType="textWebPassword"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/edittextbackgroud"
        android:hint="Password:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupemail">

    </EditText>


    <EditText
        android:id="@+id/confirm_password"

        android:layout_width="280dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittextbackgroud"
        android:hint="Password:"
        android:inputType="textWebPassword"
        app:layout_constraintBottom_toTopOf="@+id/signupbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuppassword"
        app:layout_constraintVertical_bias="0.241">

    </EditText>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="231dp" />


</androidx.constraintlayout.widget.ConstraintLayout>