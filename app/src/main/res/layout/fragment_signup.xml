<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybackground"
    tools:context="com.example.ui.auth.Signup">


    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardBackgroundColor="#22333B"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintCircleRadius="@dimen/_200sdp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_reglogapplogo">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_27sdp"
        android:layout_marginRight="@dimen/_27sdp"
        android:layout_marginBottom="@dimen/_27sdp"
        android:text="@string/signtoconti"
        android:textColor="#96A7AF"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_27sdp"
        android:layout_marginRight="@dimen/_27sdp"
        android:text="@string/hello"
        android:textColor="@color/cardview_light_background"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:text="@string/hello" />


    <androidx.cardview.widget.CardView

        android:id="@+id/cardViewrep"
        style="@style/iconswh"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#22333B"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_password"
        app:layout_constraintEnd_toStartOf="@+id/confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/confirm_password"
        >

        <ImageView
            android:id="@+id/imageViewrep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_password">

        </ImageView>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView

        android:id="@+id/cardVieww"
        style="@style/iconswh"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        app:cardBackgroundColor="#22333B"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/signupname"
        app:layout_constraintEnd_toStartOf="@+id/signupname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signupname"
        app:layout_constraintVertical_bias="0.571" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_folder">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/cardViewrw"
        style="@style/iconswh"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#22333B"
        app:layout_constraintBottom_toBottomOf="@+id/signupemail"
        app:layout_constraintEnd_toStartOf="@+id/signupemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signupemail">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/signupprogressbar"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginTop="@dimen/_20sdp"

        app:layout_constraintEnd_toEndOf="@+id/signupname"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="@+id/signupname"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        style="@style/smalltextstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:fontFamily="georgia"
        android:text="@string/loginccount"
        android:textColor="#96A7AF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/signupbtn"
        app:layout_constraintStart_toStartOf="@+id/signupbtn"
        app:layout_constraintTop_toBottomOf="@+id/signupbtn"
        app:layout_constraintVertical_bias="0.433">

    </TextView>


    <TextView
        android:id="@+id/logintxtbtn"
        style="@style/textbtnstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:fontFamily="georgia"
        android:text="@string/login"
        android:textColor="?attr/colorControlActivated"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

    <Button

        android:id="@+id/signupbtn"
        style="@style/btnstyle"
        android:background="@drawable/ic_buttonbg"
        android:text="@string/signup"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/confirm_password"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="@+id/confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password">

    </Button>

    <EditText
        android:id="@+id/signupname"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:backgroundTint="@android:color/holo_red_light"
        android:hint="Name:"
        android:inputType="textAutoComplete"
        android:textColor="#96A7AF"
        android:textColorHint="#96A7AF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

    </EditText>

    <EditText
        android:id="@+id/signupemail"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"

        android:layout_marginTop="@dimen/_3sdp"
        android:backgroundTint="@android:color/holo_red_light"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:textColor="#96A7AF"
        android:textColorHint="#96A7AF"
        app:layout_constraintEnd_toEndOf="@+id/signupname"
        app:layout_constraintStart_toStartOf="@+id/signupname"
        app:layout_constraintTop_toBottomOf="@+id/signupname">

    </EditText>

    <EditText
        android:id="@+id/signuppassword"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:backgroundTint="@android:color/holo_red_light"
        android:hint="Password:"
        android:inputType="textWebPassword"
        android:textColor="#96A7AF"
        android:textColorHint="#96A7AF"
        app:layout_constraintStart_toStartOf="@+id/signupemail"
        app:layout_constraintTop_toBottomOf="@+id/signupemail">

    </EditText>

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:backgroundTint="@android:color/holo_red_light"
        android:hint="@string/repassword"
        android:inputType="textWebPassword"
        android:singleLine="true"
        android:textColor="#96A7AF"
        android:textColorHint="#96A7AF"
        app:layout_constraintEnd_toEndOf="@+id/signuppassword"
        app:layout_constraintStart_toStartOf="@+id/signuppassword"
        app:layout_constraintTop_toBottomOf="@+id/signuppassword">

    </EditText>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/_245sdp" />

    <androidx.cardview.widget.CardView

        android:id="@+id/cardViewpass"
        style="@style/iconswh"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#22333B"
        app:layout_constraintBottom_toBottomOf="@+id/signuppassword"
        app:layout_constraintEnd_toStartOf="@+id/signuppassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signuppassword">

        <ImageView
            android:id="@+id/imageViewpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_password">

        </ImageView>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>