<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#43293F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btnstyle">
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:background">@drawable/ic_buttonbg</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="smalltextstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_50sdp</item>
        <item name="android:layout_marginEnd">@dimen/_27sdp</item>
        <item name="android:layout_marginRight">@dimen/_27sdp</item>
        <item name="android:layout_marginBottom">@dimen/_85sdp</item>
        <item name="android:fontFamily">georgia</item>
        <item name="android:textColor">#96A7AF</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="textbtnstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:fontFamily">georgia</item>
        <item name="android:textColor">?attr/colorControlActivated</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="iconswh">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
    </style>

</resources>